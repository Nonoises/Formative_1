name: Super Linter

on:
  push:
    branches:
      - main  

jobs:
  lint:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup Super Linter
        uses: github/super-linter@v4
        with:
          valid-languages: |
            javascript
            python
            html
            css
            json
            yaml
            markdown
            shell
          exclude: |
            node_modules/
            .git/
          fail-on-warning: false
